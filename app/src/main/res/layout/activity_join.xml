<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.JoinActivity"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="201dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:text="리프"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <ImageView
            android:id="@+id/profile_imageview"
            android:layout_width="200dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:background="@android:color/transparent"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:src="@drawable/adduser"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="58dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <EditText
                android:id="@+id/nicknameArea"
                android:layout_width="300dp"
                android:layout_height="48dp"

                android:background="@drawable/background_login"
                android:hint="nickname"
                android:lines="1"
                android:paddingLeft="13dp"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/emailArea"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/background_login"
                android:hint="email"
                android:lines="1"
                android:paddingLeft="13dp"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nicknameArea"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/passwordArea1"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/background_login"
                android:hint="password"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="13dp"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailArea" />

            <EditText
                android:id="@+id/passwordArea2"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:background="@drawable/background_login"
                android:hint="password check"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="13dp"
                android:singleLine="true"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordArea1" />

            <Button
                android:id="@+id/joinAppBtn"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_login_btn"
                android:gravity="center"
                android:text="Join"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordArea2"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>