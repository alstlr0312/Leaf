<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Leaf" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6495ED</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>
        <!-- Customize your theme here. -->
        <!-- custom font-family 적용 -->
        <item name="android:textViewStyle">@style/mainFont</item>
        <item name="android:editTextStyle">@style/mainFont</item>
        <item name="android:buttonStyle">@style/mainFont</item>
        <item name="android:radioButtonStyle">@style/mainFont</item>
        <item name="android:checkboxStyle">@style/mainFont</item>
    </style>
</resources>